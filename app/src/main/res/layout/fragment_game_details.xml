<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".views.GameDetailsFragment">

        <ImageView
            android:id="@+id/gameScreenImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:scaleType="center"
            android:minHeight="300dp"/>

        <TextView
            android:id="@+id/gameName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GameName"
            android:layout_below="@+id/gameScreenImage"
            android:layout_centerHorizontal="true"
            android:layout_margin="4dp"/>

        <TextView
            android:id="@+id/gameYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Game Year"
            android:layout_below="@+id/gameName"
            android:layout_centerHorizontal="true"
            android:layout_margin="4dp"/>

        <TextView
            android:id="@+id/gameManufacturer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Game Manufacturer"
            android:layout_below="@+id/gameYear"
            android:layout_centerHorizontal="true"
            android:layout_margin="4dp"/>

        <TextView
            android:id="@+id/gameDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Game Description"
            android:layout_below="@+id/gameManufacturer"
            android:layout_centerHorizontal="true"
            android:layout_margin="4dp"/>
    </RelativeLayout>
</layout>